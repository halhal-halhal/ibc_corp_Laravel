{% extends "/layouts/base.twig" %}
{% block content %}
{% include "/elements/header.twig" %}
<!-- FV -->
<header id="canvas-container">
  <div class="parallax-picture  all-bg">
    <div class="top_pic">
      <article id="recommend-pic" class="parallax-pic_inner">
        <h1>カリキュラム申し込み</h1>
        <svg class="editorial" viewBox="0 24 150 28" preserveAspectRatio="none">
          <defs>
            <path id="gentle-wave" d="m -160,44.4 c 30,0 58,-18 87.7,-18 30.3,0 58.3,18 87.3,18 30,0 58,-18 88,-18 30,0 58,18 88,18 l 0,34.5 -351,0 z"/>
          </defs>
          <g class="parallax">
            <use xlink:href="#gentle-wave" x="50" y="0" fill="#fff"/>
          </g>
        </svg>
      </article>
    </div>
  </div>
</header>
<!-- ./FV -->

<!-- 固定ページテンプレート -->
<article id="page-wrapper">
  <!-- Page Content -->
  <div class="container">
    <hr class="style-hr">
    <!-- pタグ自動挿入制御 -->
    <article class="company_content">
      <div class="container two-column">
        <div class=row>
          <div class="col-sm-12 single-top"></div>{% include "/elements/mypage_left_column.twig" %}
          <div class="col-sm-9 content">
            <div class="panel panel-default">
              <div class=panel-body>
                <h1>カリキュラム詳細ページ</h1>
                <p>カリキュラム画像:
                  <img src="/uploads/caliculam/{{caliculam_data['caliculam_image']}}" alt width=80>
                </p>
                <p>カリキュラム値段:
                  {{caliculam_data["caliculam_price"]}}
                </p>
                <p>カリキュラムタイトル:
                  {{caliculam_data["caliculam_title"]}}
                </p>
                <p>カリキュラムPRテキスト:
                  {{caliculam_data["caliculam_pr_text"]}}
                </p>
                <p>カリキュラムテキスト:
                  {{caliculam_data["caliculam_text"] |nl2br}}
                </p>
                <p>カリキュラム更新日時:
                  {{caliculam_data["updated_at"] |date("Y年m月d日 H時i分")}}
                </p><hr>
                {% if lessen_data_list | length < 1 %}
                <p>表示できるレッスンはありません
                </p>
                {% else %}
                <h2>レッスン一覧</h2>
                {% for lessen_data in lessen_data_list %}
                <p>カリキュラム:
                  {{lessen_data["caliculam_title"]}}
                </p>
                <p>レッスン画像:
                  <img src="/uploads/lessen/{{lessen_data['lessen_image']}}" alt width=80>
                </p>
                <p>レッスンタイトル:
                  {{lessen_data["lessen_title"]}}
                </p>
                <p>レッスンPRテキスト:
                  {{lessen_data["lessen_pr_text"]}}
                </p>
                <p>レッスンテキスト:
                  {{lessen_data["lessen_text"] |slice(0, 30)}}&nbsp;...
                </p>
                <p>レッスン更新日時:
                  {{lessen_data["updated_at"] |date("Y年m月d日 H時i分")}}
                </p><hr>{% endfor %}
                {% endif %}
                <p>
                  <a href="/mypage/caliculam/regist/{{caliculam_data['caliculam_id']}}/">カリキュラムに申し込む</a>

                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </article>
  </div>
</article>

{% endblock %}
