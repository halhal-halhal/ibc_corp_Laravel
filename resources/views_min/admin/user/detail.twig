{% extends "/layouts/base.twig" %}
{% block content %}
{% include "/elements/header.twig" %}
<header id="canvas-container">
  <div class="parallax-picture  all-bg">
    <div class="top_pic">
      <article id="recommend-pic" class="parallax-pic_inner">
        <h1>ユーザー一覧</h1>
        <svg class="editorial" viewBox="0 24 150 28" preserveAspectRatio="none">
          <defs>
            <path id="gentle-wave" d="m -160,44.4 c 30,0 58,-18 87.7,-18 30.3,0 58.3,18 87.3,18 30,0 58,-18 88,-18 30,0 58,18 88,18 l 0,34.5 -351,0 z"/>
          </defs>
          <g class="parallax">
            <use xlink:href="#gentle-wave" x="50" y="0" fill="#fff"/>
          </g>
        </svg>
      </article>
    </div>
  </div>
</header>
<!-- ./FV -->

<!-- 固定ページテンプレート -->
<article id="page-wrapper">
  <!-- Page Content -->
  <div class="container">
    <hr class="style-hr">
    <!-- pタグ自動挿入制御 -->
    <article class="company_content">
      <div class="row">
        <div class="col-sm-3">
          {% include "/elements/admin_left_column.twig" %}
        </div>
        <div class="col-sm-9">
          <div class="panel panel-default">
            <div class=panel-body>
              <h1>ユーザー詳細</h1><hr>
              <p>
                <a href="/admin/user/{{user_data['user_id']}}/"><img src="/uploads/profile/{{user_data['user_image']}}" width=100 alt></a>

              </p>
              <p>ID:
                {{user_data["user_id"]}}
              </p>
              <p>名前:
                {{user_data["user_real_name"]}}
              </p>
              <p>表示名:
                {{user_data["user_name"]}}
              </p>
              <p>メールアドレス:
                {{user_data["user_email"]}}
              </p>
              <p>生年月日:
                {{user_data["user_birthday"] |date("Y年m月d日")}}
              </p>
              <p>住所:
                {{user_data["user_address"]}}
              </p>
              <p>PR文:
                {{user_data["user_pr_text"] |nl2br}}
              </p>
              <p>登録日:
                {{user_data["created_at"]}}
              </p>
            </div>
          </div>
        </div>
      </article>
    </div>
  </article>
  {% endblock %}
